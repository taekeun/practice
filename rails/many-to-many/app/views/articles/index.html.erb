<h1>Articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Authors</th>
    <th></th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.authors.size %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>

<div>
  <%= link_to 'New Article', new_article_path %>
</div>
